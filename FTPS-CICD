on: 
  push:
    branches: [main]

name: ğŸš€ CI/CD Website
jobs:
  check-web-routes:
    name: ğŸ” Continuous Integration
    runs-on: ubuntu-latest
    steps:
      - name: ğŸšš Get latest code
        uses: actions/checkout@v4

      - name: ğŸ” Check if routes/web.php file exists
        run: |
          if [ ! -f routes/web.php ]; then
            echo "routes/web.php file is missing!"
            exit 1
          else
            echo "routes/web.php file found!"
          fi
              
  web-deploy:
    name: ğŸ‰ Continuous Delivery
    runs-on: ubuntu-latest
    needs: check-web-routes
    steps:
      - name: ğŸšš Get latest code
        uses: actions/checkout@v4
    
      - name: ğŸ“‚ Sync files
        uses: SamKirkland/FTP-Deploy-Action@v4.3.5
        with:
          server: ${{ secrets.FTP_SERVER }}
          username: ${{ secrets.FTP_USER }}
          password: ${{ secrets.FTP_PASSWORD }}
          local-dir: ./ 
          server-dir: /
